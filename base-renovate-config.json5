{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  platform: "github",
  baseBranches: [
    "main",
    "alpha",
    "beta"
  ],
  extends: [
    ":ignoreModulesAndTests"
  ],
  labels: [
    "renovate"
  ],
  rebaseLabel: "renovate-please-rebase",
  semanticCommits: "enabled",
  dependencyDashboard: false,
  // taken from config:recommended
  branchConcurrentLimit: 10,
  // taken from config:recommended
  prHourlyLimit: 10,
  // If we intentionally close a Renovate MR, consider it as "update not desired"
  recreateClosed: false,
  rebaseWhen: "behind-base-branch",
  rangeStrategy: "auto",
  branchPrefix: "renovate/",
  gomod: {
    postUpdateOptions: [
      "gomodTidy"
    ]
  },
  packageRules: [
    {
      matchPackagePatterns: [
        "*"
      ],
      semanticCommitType: "chore"
    },
    {
      matchManagers: [
        "npm"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major",
        "minor",
        "patch"
      ],
      matchDepTypes: [
        "devDependencies"
      ],
      separateMajorMinor: false,
      groupName: "npm dev dependencies",
      groupSlug: "all-npm-dev-dependencies",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "major-minor-patch",
        "npm",
        "npm-dev-dependencies"
      ]
    },
    {
      matchManagers: [
        "npm"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "minor",
        "patch"
      ],
      matchDepTypes: [
        "dependencies"
      ],
      groupName: "npm dependencies",
      groupSlug: "non-major-npm",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "minor-patch",
        "npm",
        "npm-dependencies"
      ]
    },
    {
      matchManagers: [
        "npm"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major"
      ],
      matchDepTypes: [
        "dependencies"
      ],
      groupName: "npm major dependencies",
      groupSlug: "npm",
      automerge: false,
      semanticCommitType: "feat",
      addLabels: [
        "major",
        "npm",
        "npm-dependencies"
      ]
    },
    {
      matchManagers: [
        "node"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "minor",
        "patch"
      ],
      groupName: "node dependencies",
      groupSlug: "non-major-node",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "minor-patch",
        "node"
      ]
    },
    {
      matchManagers: [
        "node"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major"
      ],
      groupName: "node major dependencies",
      groupSlug: "node",
      automerge: false,
      semanticCommitType: "feat",
      addLabels: [
        "major",
        "node"
      ]
    },
    {
      matchManagers: [
        "dockerfile"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major",
        "minor",
        "patch"
      ],
      groupName: "docker dependencies",
      groupSlug: "docker-dependencies",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "major-minor-patch",
        "docker"
      ]
    },
    {
      matchManagers: [
        "github-actions"
      ],
