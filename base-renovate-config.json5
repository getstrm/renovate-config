      groupSlug: "all-gradle-wrapper",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "major-minor-patch",
        "gradle",
        "gradle-wrapper"
      ]
    },
    {
      matchManagers: [
        "gradle"
      ],
      matchPaths: [
        "settings.gradle",
        "settings.gradle.kts"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major",
        "minor",
        "patch"
      ],
      groupName: "gradle build dependencies",
      groupSlug: "all-gradle-build",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "major-minor-patch",
        "gradle",
        "gradle-build"
      ]
    },
    {
      matchManagers: [
        "gradle"
      ],
      matchPaths: [
        "build.gradle",
