      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major"
      ],
      groupName: "gradle app major dependencies",
      groupSlug: "gradle-app",
      automerge: false,
      semanticCommitType: "feat",
      addLabels: [
        "major",
        "gradle",
        "gradle-app"
      ]
    },
    {
      matchManagers: [
        "terraform"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "minor",
        "patch"
      ],
      groupName: "terraform dependencies",
      groupSlug: "non-major-terraform",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "minor-patch",
        "terraform"
      ]
    },
    {
      matchManagers: [
        "terraform"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "major"
      ],
      groupName: "terraform major dependencies",
      groupSlug: "terraform",
      automerge: true,
      platformAutomerge: true,
      addLabels: [
        "major",
        "terraform"
      ]
    },
    {
      matchManagers: [
        "gomod"
      ],
      matchPackagePatterns: [
        "*"
      ],
      matchUpdateTypes: [
        "minor",
        "patch"
      ],
